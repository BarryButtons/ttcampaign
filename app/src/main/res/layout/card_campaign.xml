<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="180dp"
            android:layout_height="128dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/change_campaign_image"/>

        <Button
            android:id="@+id/item_delete"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="320dp"

            android:background="@color/purple_200"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:rotationY="0"
            android:stateListAnimator="@null"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/campaignTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/campaignTitle"
            android:layout_marginTop="-54dp"
            android:text="Campaign Title"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/campaignTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            tools:text="A Title" />

        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/campaignTitle"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionLabel"
            tools:text="A Description" />

        <TextView
            android:id="@+id/dmNotesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="10dp"
            android:text="DM Notes"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dmNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dmNotesLabel"
            tools:text="Notes for Players" />

        <TextView
            android:id="@+id/nextSessionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dmNotes"
            android:layout_marginTop="10dp"
            android:text="Next Session"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nextSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nextSessionLabel"
            tools:text="Date of Next Session" />

        <TextView
            android:id="@+id/sessionLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nextSession"
            android:layout_marginTop="10dp"
            android:text="Next Session Location"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sessionLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sessionLocationLabel"
            tools:text="Where is the next session" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
